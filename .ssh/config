CanonicalizeHostname always
CanonicalDomains in.ngs.ru cname.s
CanonicalizeFallbackLocal yes
CanonicalizePermittedCNAMEs *.cname.s:*.s

IdentityFile ~/.ssh/id_rsa

Host t
    HostName        home.local
    User            vxw

Host .*
    HostName        ngs.ru%h
    User            root
    IdentityFile    ~/.ssh/id_rsa_env
    StrictHostKeyChecking no

Host *.s *.in.ngs.ru
    User            e.kovetskiy

Host github.com
    ControlMaster   no

Host *
    ControlMaster   auto
    ControlPersist  1h
    ControlPath     ~/.ssh/connections/%r_%h_%p
    Compression     yes
    SendEnv         TERM
    User            e.kovetskiy
