IdentityFile        ~/.ssh/id_rsa

Host *.d *.t*
    User            root
    IdentityFile    ~/.ssh/id_rsa_env

Host *.s
    User            e.kovetskiy

Host ya*.yard.s
    HostName        %h

Host ya*
    HostName        %h.yard.s

Host fo*
    HostName        %h.fortres.s

Host ri*
    HostName        %h.rig.s

Host *in.ngs.*
    HostName        %h

Host db*
    HostName        %h.farm.s

Host task*
    User            ngs

Host .*
    HostName        ngs.ru%h
    User            root

Host *
    ControlMaster   auto
    ControlPersist  1h
    ControlPath     ~/.ssh/connections/%r_%h_%p
    Compression     yes
    SendEnv         TERM BACKGROUND
