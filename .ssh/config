IdentityFile ~/.ssh/id_rsa

CanonicalizeHostname always
CanonicalDomains in.ngs.ru cname.s
CanonicalizeFallbackLocal yes
CanonicalizePermittedCNAMEs *.cname.s:*.s

Host ssh.git.rn
    HostName git.rn
    Port 2222

Host t home.local
    HostName        home.local
    User            operator

Host .*
    HostName        ngs.ru%h
    User            root
    IdentityFile    ~/.ssh/id_rsa_env
    StrictHostKeyChecking no

Host *ngs.ru.*
    HostName        %h
    User            root
    IdentityFile    ~/.ssh/id_rsa_env
    StrictHostKeyChecking no

Host aur.archlinux.org
    IdentityFile    ~/.ssh/id_rsa_aur

Host *.s *.in.ngs.ru
    User            e.kovetskiy

Host git*
    ControlMaster   no

Host *
    ControlMaster   auto
    ControlPersist  1h
    ControlPath     ~/.ssh/connections/%r_%h_%p
    Compression     yes
    SendEnv         TERM BACKGROUND
    User            e.kovetskiy
