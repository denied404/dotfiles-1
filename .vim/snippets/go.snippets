snippet ko "" wb
import "github.com/kovetskiy/ko"

type config struct {
	Web struct {
		Listen string \`toml:"listen"\`
	} \`toml:"web"\`

	Database struct {
		URL string \`toml:"url"\`
	} \`toml:"database"\`
}

func getConfig(path string) (*config, error) {
	config := &config{}
	err := ko.Load(path, config)
	if err != nil {
		return nil, err
	}

	return config, nil
}
endsnippet

