snippet as "" w
func New$1($2) *$1 {
	`!p snip.rv=t[1].lower()` := &$1{
`!p
parts = t[2].split(',')
contents = ""
if t[2] != "":
	for part in parts:
		pieces = part.strip().split(' ')
		name = pieces[0]
		contents += "\t\t" + name + ": "+name + ",\n"
snip.rv=contents`
	}

	return `!p snip.rv=t[1].lower()`
}
endsnippet

