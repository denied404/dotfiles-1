workspace w output $right # terminal
workspace e output $right # email

workspace z output $right # mcabber
workspace x output $left # tmp
workspace c output $right # gui shit - skype

bindsym $alt+Ctrl+grave  [instance="^(?!kuake)"] scratchpad show
