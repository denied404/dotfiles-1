bindsym pause workspace q; exec "browser http://cs543100.vk.me/v543100237/50df/joWgtvxgsRo.jpg"

bindsym $alt+Shift+r restart

bindsym $alt+Ctrl+s exec browser

bindsym $win+Shift+v split vertical
bindsym $win+Shift+h split horizontal

bindsym $alt+Ctrl+r mode "resize"
mode "resize" {
        bindsym h resize grow width 1 px or 1 ppt
        bindsym j resize shrink height 1 px or 1 ppt
        bindsym k resize grow height 1 px or 1 ppt
        bindsym l resize shrink width 1 px or 1 ppt

        bindsym Ctrl+h resize grow width 10 px or 10 ppt
        bindsym Ctrl+j resize shrink height 10 px or 10 ppt
        bindsym Ctrl+k resize grow height 10 px or 10 ppt
        bindsym Ctrl+l resize shrink width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $alt+Ctrl+a   exec "brightness down"
bindsym $alt+Ctrl+q   exec "brightness up"
bindsym $alt+b        exec "xsel -op | xsel -ib"


bindsym  F1           exec screenshot > ~/.screenshot
bindsym  F2           exec volume down
bindsym  F3           exec volume up
bindsym  F5           exec mplayer-control pt_step -1
bindsym  F6           exec mplayer-control pause
bindsym  F7           exec mplayer-control pt_step 1

bindsym  $alt+less    exec volume down
bindsym  $alt+greater exec volume up
bindsym  $win+Ctrl+l  exec screen-lock
bindsym  $win+Ctrl+d  exec notification-information-basic
bindsym  $alt+Ctrl+e  exec translator
bindsym  $alt+Tab     exec paster
bindsym  Ctrl+F12     exec xkb
bindsym  $alt+grave   exec terminal-floating

set $left  DVI-I-1
set $right VGA-1

workspace 1 output $left # VIM
workspace 2 output $left # terminal
workspace 3 output $left # terminal

workspace q output $right # firefox
workspace s output $right # chrome
