bindsym $alt+Shift+a move container to workspace a
bindsym $alt+Shift+s move container to workspace s
bindsym $alt+Shift+d move container to workspace d
bindsym $alt+Shift+z move container to workspace z
bindsym $alt+Shift+x move container to workspace x
bindsym $alt+Shift+c move container to workspace c

bindsym Pause workspace q; exec "firefox http://cs543100.vk.me/v543100237/50df/joWgtvxgsRo.jpg"

bindsym $alt+Shift+r restart

bindsym $win+shift+v split vertical
bindsym $win+shift+h split horizontal

mode "resize" {
        bindsym h resize grow width 1 px or 1 ppt
        bindsym j resize shrink height 1 px or 1 ppt
        bindsym k resize grow height 1 px or 1 ppt
        bindsym l resize shrink width 1 px or 1 ppt

        bindsym Ctrl+h resize grow width 10 px or 10 ppt
        bindsym Ctrl+j resize shrink height 10 px or 10 ppt
        bindsym Ctrl+k resize grow height 10 px or 10 ppt
        bindsym Ctrl+l resize shrink width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $alt+Ctrl+a exec "sudo ~/bin/brightness down"
bindsym $alt+Ctrl+q exec "sudo ~/bin/brightness up"
bindsym $alt+b exec "xsel -op | xsel -ib"

bindsym $alt+Ctrl+r mode "resize"

bindsym Ctrl+Shift+$alt+Break exec poweroff

bindsym $alt+less    exec amixer set Master 1%-
bindsym $alt+greater exec amixer set Master 1%+
bindsym $win+Ctrl+l  exec lockscreen
bindsym $win+Ctrl+d  exec show-info
bindsym $alt+Ctrl+e  exec ~/bin/engrus
bindsym Ctrl+F12     exec reconfig-kbd

set $rightM HDMI1
set $leftM VGA1

workspace 1 output $rightM # VIM
workspace 2 output $rightM # terminal
workspace 3 output $rightM # terminal

workspace q output $leftM # firefox
workspace w output $leftM # terminal
workspace e output $leftM # email

workspace z output $leftM # mcabber
workspace x output $rightM # tmp
workspace c output $rightM # gui shit - skype

bindsym $alt+Ctrl+grave [instance="^(?!kuake)"] scratchpad show
bindsym $alt+Shift+grave move scratchpad
