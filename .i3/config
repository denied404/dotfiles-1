font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

hide_edge_borders both
font pango:Monaco 1
new_window 1pixel
focus_follows_mouse off

set $win Mod1
set $alt Mod4

floating_modifier $alt

bindsym $alt+Return exec ~/go/bin/marvex

bindsym Ctrl+Up kill

bindsym $alt+r exec dmenu_run

bindsym Shift+$alt+Ctrl+f floating toggle

bindsym Ctrl+Home focus left
bindsym Ctrl+Next focus down
bindsym Ctrl+Prior focus up
bindsym Ctrl+End focus right

bindsym Ctrl+Shift+Home move left
bindsym Ctrl+Shift+Next move down
bindsym Ctrl+Shift+Prior move up
bindsym Ctrl+Shift+End move right

bindsym $alt+f fullscreen

bindsym $alt+1 workspace 1
bindsym $alt+2 workspace 2
bindsym $alt+3 workspace 3
bindsym $alt+4 workspace 4
bindsym $alt+5 workspace 5
bindsym $alt+6 workspace 6
bindsym $alt+7 workspace 7
bindsym $alt+8 workspace 8
bindsym $alt+9 workspace 9

bindsym $alt+q workspace q
bindsym $alt+w workspace w
bindsym $alt+e workspace e
bindsym $alt+a workspace a
bindsym $alt+s workspace s
bindsym $alt+d workspace d
bindsym $alt+z workspace z
bindsym $alt+x workspace x
bindsym $alt+c workspace c

bindsym $alt+Shift+1 move container to workspace 1
bindsym $alt+Shift+2 move container to workspace 2
bindsym $alt+Shift+3 move container to workspace 3
bindsym $alt+Shift+4 move container to workspace 4
bindsym $alt+Shift+5 move container to workspace 5
bindsym $alt+Shift+6 move container to workspace 6
