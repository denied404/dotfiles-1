font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
font pango:Monaco for Powerline 9
focus_follows_mouse off
floating_modifier Mod4

bindsym Mod4+Return exec i3-sensible-terminal

bindsym Mod1+Shift+q kill

bindsym Mod4+d exec dmenu_run

bindsym Mod4+u focus left
bindsym Mod4+i focus down
bindsym Mod4+o focus up
bindsym Mod4+p focus right

bindsym Mod4+Shift+u move left
bindsym Mod4+Shift+i move down
bindsym Mod4+Shift+o move up
bindsym Mod4+Shift+p move right

bindsym Mod4+h split h
bindsym Mod4+v split v

bindsym Mod4+Shift+f fullscreen
bindsym Mod4+Shift+s layout stacking
bindsym Mod4+Shift+t layout tabbed

bindsym Mod4+1 workspace 1
bindsym Mod4+2 workspace 2
bindsym Mod4+3 workspace 3
bindsym Mod4+q workspace q
bindsym Mod4+w workspace w
bindsym Mod4+e workspace e
bindsym Mod4+z workspace z
bindsym Mod4+x workspace x
bindsym Mod4+c workspace c

bindsym Mod4+Shift+1 move container to workspace 1
bindsym Mod4+Shift+2 move container to workspace 2
bindsym Mod4+Shift+3 move container to workspace 3
bindsym Mod4+Shift+q move container to workspace q
bindsym Mod4+Shift+w move container to workspace w
bindsym Mod4+Shift+e move container to workspace e
bindsym Mod4+Shift+z move container to workspace z
bindsym Mod4+Shift+x move container to workspace x
bindsym Mod4+Shift+c move container to workspace c

bindsym Mod4+Shift+r restart

mode "resize" {
        bindsym j           resize shrink width 10 px or 10 ppt
        bindsym k           resize grow height 10 px or 10 ppt
        bindsym l           resize shrink height 10 px or 10 ppt
        bindsym semicolon   resize grow width 10 px or 10 ppt

        bindsym Left        resize shrink width 2 px or 2 ppt
        bindsym Down        resize grow height 2 px or 2 ppt
        bindsym Up          resize shrink height 2 px or 2 ppt
        bindsym Right       resize grow width 2 px or 2 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym Mod4+r mode "resize"

bar {
        status_command i3status 
}

exec i3-config-wizard

bindsym Mod4+Control+l exec i3lock -c 000000
bindsym Mod4+Control+p exec "~/bin/screenshot"

# lol
bindsym Mod4+Control+minus exec "pactl set-sink-volume 0 -- -2500"
bindsym Mod4+Control+equal exec "pactl set-sink-volume 0 -- +2500"

bindsym Mod4+~ exec "setxkbmap us"
bindsym shift+lock exec "setxkbmap ru"
