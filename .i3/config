font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# hack for removing title, but rendering ~2px titlebar (get an indication of the active window)
font pango:Monaco 0
new_window normal 0 px
focus_follows_mouse off
floating_modifier Mod4

bindsym Mod1+Return exec urxvt
bindsym Mod1+Shift+Return exec "urxvt -e vim"

bindsym Mod4+Shift+q kill

bindsym Mod1+d exec dmenu_run

bindsym Mod1+u focus left
bindsym Mod1+i focus down
bindsym Mod1+o focus up
bindsym Mod1+p focus right

bindsym Mod1+Shift+u move left
bindsym Mod1+Shift+i move down
bindsym Mod1+Shift+o move up
bindsym Mod1+Shift+p move right

bindsym Mod1+b split h
bindsym Mod1+v split v

bindsym Mod1+Shift+f fullscreen
bindsym Mod1+Shift+s layout stacking
bindsym Mod1+Shift+t layout tabbed
bindsym Mod1+Shift+n layout toggle split

bindsym Mod1+1 workspace 1
bindsym Mod1+2 workspace 2
bindsym Mod1+3 workspace 3
bindsym Mod1+4 workspace 4
bindsym Mod1+5 workspace 5
bindsym Mod1+6 workspace 6
bindsym Mod1+7 workspace 7
bindsym Mod1+8 workspace 8
bindsym Mod1+9 workspace 9

bindsym Mod1+q workspace q
bindsym Mod1+w workspace w
bindsym Mod1+e workspace e
bindsym Mod1+z workspace z
bindsym Mod1+x workspace x
bindsym Mod1+c workspace c

bindsym Mod1+Shift+1 move container to workspace 1
bindsym Mod1+Shift+2 move container to workspace 2
bindsym Mod1+Shift+3 move container to workspace 3
bindsym Mod1+Shift+4 move container to workspace 4
bindsym Mod1+Shift+5 move container to workspace 5
bindsym Mod1+Shift+6 move container to workspace 6
bindsym Mod1+Shift+7 move container to workspace 7
bindsym Mod1+Shift+8 move container to workspace 8
bindsym Mod1+Shift+9 move container to workspace 9

bindsym Mod1+Shift+q move container to workspace q
bindsym Mod1+Shift+w move container to workspace w
bindsym Mod1+Shift+e move container to workspace e
bindsym Mod1+Shift+z move container to workspace z
bindsym Mod1+Shift+x move container to workspace x
bindsym Mod1+Shift+c move container to workspace c

bindsym Mod1+Shift+r restart

mode "resize" {
        bindsym j           resize shrink width 10 px or 10 ppt
        bindsym k           resize grow height 10 px or 10 ppt
        bindsym l           resize shrink height 10 px or 10 ppt
        bindsym semicolon   resize grow width 10 px or 10 ppt

        bindsym Left        resize shrink width 2 px or 2 ppt
        bindsym Down        resize grow height 2 px or 2 ppt
        bindsym Up          resize shrink height 2 px or 2 ppt
        bindsym Right       resize grow width 2 px or 2 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym Mod1+Control+r mode "resize"

exec i3-config-wizard

bindsym Mod1+Control+l exec lockscreen

bindsym Mod1+Control+0 exec "pactl set-sink-volume 0 -- -25000"
bindsym Mod1+Control+minus exec "pactl set-sink-volume 0 -- -2500"
bindsym Mod1+Control+equal exec "pactl set-sink-volume 0 -- +2500"

bindsym Mod1+Control+d exec "show-date"
bindsym Mod1+Mod4+Return exec "xdotool click 1"
