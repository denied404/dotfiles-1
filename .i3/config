font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

hide_edge_borders both
font pango:Monaco 1
new_window 1pixel
focus_follows_mouse off

set $win Mod1
set $alt Mod4

floating_modifier $alt

bindsym $win+Return exec "urxvtc || urxvt"

bindsym $alt+Shift+q kill

bindsym $alt+d exec dmenu_run

bindsym Shift+$alt+Control+f floating toggle

bindsym $win+u focus left
bindsym $win+i focus down
bindsym $win+o focus up
bindsym $win+p focus right

bindsym $win+Shift+u move left
bindsym $win+Shift+i move down
bindsym $win+Shift+o move up
bindsym $win+Shift+p move right

bindsym $alt+f fullscreen
bindsym $alt+s layout toggle split

bindsym $win+1 workspace 1
bindsym $win+2 workspace 2
bindsym $win+3 workspace 3
bindsym $win+4 workspace 4
bindsym $win+5 workspace 5
bindsym $win+6 workspace 6
bindsym $win+7 workspace 7
bindsym $win+8 workspace 8
bindsym $win+9 workspace 9

bindsym $win+q workspace q
bindsym $win+w workspace w
bindsym $win+e workspace e
bindsym $win+a workspace a
bindsym $win+s workspace s
bindsym $win+d workspace d
bindsym $win+z workspace z
bindsym $win+x workspace x
bindsym $win+c workspace c

bindsym $win+Shift+1 move container to workspace 1
bindsym $win+Shift+2 move container to workspace 2
bindsym $win+Shift+3 move container to workspace 3
bindsym $win+Shift+4 move container to workspace 4
bindsym $win+Shift+5 move container to workspace 5
bindsym $win+Shift+6 move container to workspace 6
bindsym $win+Shift+7 move container to workspace 7
bindsym $win+Shift+8 move container to workspace 8
bindsym $win+Shift+9 move container to workspace 9

bindsym $win+Shift+q move container to workspace q
bindsym $win+Shift+w move container to workspace w
bindsym $win+Shift+e move container to workspace e
bindsym $win+Shift+a move container to workspace a
bindsym $win+Shift+s move container to workspace s
bindsym $win+Shift+d move container to workspace d
bindsym $win+Shift+z move container to workspace z
bindsym $win+Shift+x move container to workspace x
bindsym $win+Shift+c move container to workspace c

bindsym $win+Shift+r restart

mode "resize" {
        bindsym h resize grow width 1 px or 1 ppt
        bindsym j resize shrink height 1 px or 1 ppt
        bindsym k resize grow height 1 px or 1 ppt
        bindsym l resize shrink width 1 px or 1 ppt

        bindsym Control+h resize grow width 10 px or 10 ppt
        bindsym Control+j resize shrink height 10 px or 10 ppt
        bindsym Control+k resize grow height 10 px or 10 ppt
        bindsym Control+l resize shrink width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $alt+a exec "sudo ~/bin/brightness down"
bindsym $alt+q exec "sudo ~/bin/brightness up"
bindsym Ctrl+Insert exec bash -c 'selected=$(xsel) && xclip -selection clipboard <<< "$selected" && xclip -selection primary <<< "$selected"'

bindsym $win+Control+r mode "resize"

bindsym $win+Control+e      exec engrus
bindsym $win+Control+l      exec lockscreen
bindsym $win+Control+0      exec volume toggle
bindsym $win+Control+minus  exec volume down
bindsym $win+Control+equal  exec volume up
bindsym $win+Control+d      exec show-date
bindsym $alt+Control+e      exec anki-add-word
bindsym $win+$alt+Return    exec "xdotool click 1"

set $leftM VGA1
set $rightM HDMI1

workspace 1 output $rightM # VIM
workspace 2 output $rightM # terminal
workspace 3 output $rightM # terminal

workspace q output $leftM # firefox
workspace w output $leftM # terminal
workspace e output $leftM # email

workspace z output $leftM # mcabber
workspace x output $rightM # tmp
workspace c output $rightM # gui shit - skype

bindsym $alt+Ctrl+grave [instance="^(?!kuake)"] scratchpad show
bindsym $alt+Shift+grave move scratchpad
bindsym $alt+grave exec kuake

for_window [instance="^screenkey$"] floating enable
for_window [instance="^sxiv$"] floating enable
for_window [instance="^kuake_"] floating enable

client.focused #cb4b16 #dc322f #fdf6e3 #ffffff
