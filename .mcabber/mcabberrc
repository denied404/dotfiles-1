source ~/.mcabber/account

set ignore_self_presence = 1

set tls = 1
set ssl_ignore_checks = 1

set cmdhistory_lines = 512

set roster_display_filter = ofdnax

set lang = en
set logging = 1
set load_logs = 1
set logging_dir = ~/.mcabber/histo/
set logging_ignore_status = 1

set log_muc_conf = 1
set load_muc_logs = 1

set statefile = ~/.mcabber/mcabber.state
set max_history_blocks = 8

set events_command = ~/.mcabber/eventcmd

set muc_print_status = 1

set roster_width=40

bind 10 = roster down
bind 11 = roster up

bind 9 = buffer down
bind 15 = buffer up 

alias s = roster search

alias on = status online
alias a = status away
alias na = status notavail

set fifo_name = ~/.mcabber/mcabber.fifo
set fifo_hide_commands = 0
module load fifo

color roster * * white
color roster of * brightwhite
color roster * *@conference* brightwhite
color roster an * yellow
color roster d * blue

# ctrl+q
bind 17 = roster unread_next

# F12 (276) bound to /roster toggle
bind 276 = roster toggle

source ~/.mcabber/aliases

set color_background = 234
set color_general = 244
set color_info = 240
set color_msgin = 166
set color_msgout = 64
set color_msghl = 136
set color_bgstatus = 235
set color_status = 166
set color_roster = 240
set color_bgrostersel = 235
set color_rostersel = 166
set color_rosterselmsg = 136
set color_rosternewmsg = 136

module load editor
