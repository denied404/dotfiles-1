#!/bin/bash

get-status() {
    for window in $(:windows); do
        title=$(xdotool getwindowname $window)
        if [[ "$title" == "youtube-music-desktop-app" ]]; then
            continue
        fi
        echo üéµ $title
    done
}

:windows() {
    if [[ ! "$_windows" ]]; then
        _windows=$(xdotool search --class youtube-music-desktop-app)
    fi
    echo "$_windows"
}

:send() {
    local key=$1
    active=$(xdotool getactivewindow)
    for window in $(:windows); do
        xdotool windowactivate $window
        xdotool key --clearmodifiers --window $window $key
    done
    xdotool windowactivate $active
}

icon=""
case "$1" in
next)
    icon="‚è≠Ô∏è"
    :send j
    ;;

prev)
    icon="‚èÆÔ∏è"
    :send k
    ;;

pause)
    icon="‚èØÔ∏è"
    :send space
    ;;

save)
    icon="‚≠ê"
    :send plus
    ;;

*)
    icon="${1}"
    ;;
esac

if [[ "$1" == "status" ]]; then
    notify-replace music "" "$(get-status)"
    exit
fi

notify-replace music "" "${icon}"
notify-replace music "" "$(get-status)"
