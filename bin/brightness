#!/bin/bash

if [ "$(cat ~/profile)" == "laptop" ]; then
    dir=/sys/class/backlight/intel_backlight
    step=50
else
    dir=/sys/class/backlight/acpi_video0
    step=1
fi

path=$dir/brightness
value=$(cat $path)

if [ $# -eq 0 ]; then
	echo $value
elif [ $1 == "up" ]; then
	echo $(($value+$step)) | sudo tee $dir/brightness
elif [ $1 == "down" ]; then
	echo $(($value-$step)) | sudo tee $dir/brightness
fi
