#!/bin/bash

amixer -c 0 cset 'numid=10' 1

autorandr --change

xkb

# @TODO: move to systemd
killall -9 keynav
keynav

if ! pidof clipboard-sync >/dev/null; then
    sudo clipboard-sync &
fi

xset dpms 0 0 0
xset s off
xset -b
xset +fp ~/.fonts
xset fp rehash

xrdb -load ~/.Xresources
background-switch $(cat ~/background)

if [[ -f ~/wallpaper.* ]]; then
    feh --bg-scale ~/wallpaper.*
fi
