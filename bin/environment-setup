#!/bin/bash

#wallpaper

xkb

autorandr --change

amixer -c 0 cset 'numid=10' 1 &>/dev/null

killall -9 xcsyncd
systemd-cat -t xcsyncd xcsyncd &

pkill keynav

/usr/bin/redshift -P -O 20000K

killll -9 sxhkd
SHELL=/bin/zsh sudo -E -u $USER sxhkd &

killall -9 xkeybind
xbindkeys

pkill -f dunst
systemd-cat -t dunst bash -c 'while :; do dunst; done' &

xset dpms 0 0 0
xset s off
xset -b
xset +fp ~/.fonts
xset fp rehash

xrdb -load ~/.Xresources
background-switch $(cat ~/.config/background)
