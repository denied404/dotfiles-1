#!/bin/bash

xkb

autorandr=$(
    autorandr --change 2>&1 \
        | tee /dev/stderr \
        | awk '/\(current\)$/ {print $1}'
)
if [[ "$autorandr" == "dexp" ]]; then
    pactl set-card-profile 0 "output:hdmi-stereo+ainput:analog-stereo"
else
    pactl set-card-profile 0 "output:analog-stereo+input:analog-stereo"
fi

amixer -c 0 cset 'numid=10' 1 &>/dev/null

sudo killall -9 keynav
keynav

sudo killall -9 clipboard-sync
sudo clipboard-sync &

xset dpms 0 0 0
xset s off
xset -b
xset +fp ~/.fonts
xset fp rehash

xrdb -load ~/.Xresources
background-switch $(cat ~/.config/background)

feh --bg-scale ~/wallpaper.*
