#!/bin/bash

   xrandr \
    --output DVI-I-1 --mode 1920x1080 --pos 0x0 --rotate normal \
    --output VGA-1 --mode 1920x1080 --pos 1920x0 --rotate normal \
|| xrandr --output VGA1 --mode 1920x1200 --output LVDS1 --off

xkb-reconfigure

# @TODO: move to systemd
killall -9 keynav
keynav

if ! pidof clipboard-sync >/dev/null; then
    sudo clipboard-sync &
fi

# @TODO: move to systemd
if ! pidof usb-automount >/dev/null; then
    sudo usb-automount &
fi

if [ -f ~/.redshift ]; then
    if ! pidof redshift > /dev/null; then
        redshift -l 55.7:12.6 -t 3500:3100 -g 0.8 -m randr -v &
    fi
fi

xset dpms 0 0 0
xset s off
xset -b
xset +fp ~/.fonts
xset fp rehash

xrdb -load ~/.Xresources
background-switch $BACKGROUND
