#!/bin/bash

amixer -c 0 cset 'numid=10' 1

if xrandr -q | grep eDP1; then
    if xrandr -q | grep -P '^DP1'; then
        xrandr \
            --output eDP1 --off \
            --output DP1 --mode 1920x1200 --pos 0x0 --primary
    else
        xrandr --output eDP1 --mode 1920x1080 --pos 0x0 --primary
    fi
else
   xrandr \
    --output DVI-I-1 --mode 1920x1080 --pos 0x0 --rotate normal \
    --output VGA-1 --mode 1920x1080 --pos 1920x0 --rotate normal
fi

xkb

# @TODO: move to systemd
killall -9 keynav
keynav

if ! pidof clipboard-sync >/dev/null; then
    sudo clipboard-sync &
fi

if [ -f ~/.redshift ]; then
    if ! pidof redshift > /dev/null; then
        redshift -l 55.7:12.6 -t 3500:3100 -g 0.8 -m randr -v &
    fi
fi

xset dpms 0 0 0
xset s off
xset -b
xset +fp ~/.fonts
xset fp rehash

xrdb -load ~/.Xresources
background-switch $(cat ~/background)
