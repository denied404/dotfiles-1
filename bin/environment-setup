#!/bin/bash

xkb

autorandr --change

amixer -c 0 cset 'numid=10' 1 &>/dev/null

killall -9 xcsyncd
systemd-cat -t xcsynd xcsyncd &

pkill keynav

redshift start

xset dpms 0 0 0
xset s off
xset -b
xset +fp ~/.fonts
xset fp rehash

xrdb -load ~/.Xresources
background-switch $(cat ~/.config/background)

feh --bg-scale ~/wallpaper.*
