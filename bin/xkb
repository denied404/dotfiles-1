#!/bin/bash

MODE=${1:+-$1}

xkbcomp -w 0 -I$HOME/.xkb -R$HOME/.xkb $HOME/.xkbrc${MODE} $DISPLAY

xset -b

if ! pidof shift-shift &>/dev/null; then
    sudo systemd-cat -t shift-shift shift-shift \
        -first CAPSLOCK \
        -second RIGHTSHIFT \
        -match '(?i)razer|keyboard|storm' &
fi

repeat_delay=110
repeat_rate=170

xset r rate $repeat_delay $repeat_rate
