#!/bin/bash

MODE=${1:+-$1}

xkbcomp -w 0 -I$HOME/.xkb -R$HOME/.xkb $HOME/.xkbrc${MODE} $DISPLAY

xset -b

sudo pkill shift-shift
sudo shift-shift -first CAPSLOCK -second RIGHTSHIFT -match razer &>/dev/null &
sudo shift-shift -first CAPSLOCK -second RIGHTSHIFT -match keyboard &>/dev/null &
sudo shift-shift -first CAPSLOCK -second RIGHTSHIFT -match storm &>/dev/null &

repeat_delay=110
repeat_rate=150

xset r rate $repeat_delay $repeat_rate
