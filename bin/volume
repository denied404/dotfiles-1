#!/bin/bash

exec 200>/tmp/volume.lock
flock 200

:main() {
    local action=$1

    local status="$(:change "$action")"

    :notify "$status"
}

:notify() {
    local value=$1
    notify-send.sh -r 300 -t 100 " " -- "<b>VOLUME</b>   ${value}%"
}

:change() {
    local action=$1

    case $action in
        up)
            ponymix increase 2
        ;;

        down)
            ponymix decrease 2
        ;;
    esac
}


:main "${@}"
