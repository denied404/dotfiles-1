#!/bin/bash

#[ -n "$_LOCK" ] || _LOCK=x exec flock -n $0 $0 "$@"

:main() {
    local action=$1

    local status="$(:change "$action")"

    :notify "$status"
}

:notify() {
    local value=$1
    local bar=$(sparklines $(seq 0 10 ${value}))
    notify-replace "volume" "" "<b>VOLUME</b> ${bar} ${value}%"
}

:change() {
    local action=$1
    local step=2

    case $action in
        up)
            volumectl -f '%.0f' up $step
        ;;

        down)
            volumectl -f '%.0f' down $step
        ;;
    esac
}


:main "${@}"
