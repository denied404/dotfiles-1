#!/bin/bash

ACTION=$1

CARD=$(pactl list sinks | grep Sink | head -n 1 | cut -d# -f2)

COUNT=2500
if [[ "$CARD" == "0" ]]; then
    COUNT=500
fi

echo $CARD > /tmp/volume.txt
case $ACTION in
    "toggle")
        pactl set-sink-mute $CARD toggle
        ;;

    "up")
        pactl set-sink-volume $CARD -- +$COUNT
        ;;

    "down")
        pactl set-sink-volume $CARD -- -$COUNT
        ;;

    *)
        echo "unknown action"
        exit 1
        :;
esac
