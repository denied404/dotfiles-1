#!/bin/bash

url=$(sed -r 's#^(git+ssh|ssh|git)://(\w+@)?##' <<< "$1")
params="${@:2}"

scheme=$(grep -Po '^\w+://' <<< "$url")
if [[ "$scheme" != "http://"
   && "$scheme" != "https://"
   && "$scheme" != "ftp://"
   && "$scheme" != "file://"
   && "$scheme" != "" ]]; then
    /usr/bin/xdg-open "$url"

    exit 1
fi

if [[ -e "${url}" ]]; then
    url="$(readlink -f "${url}")"
fi

if [[ "$PROFILE" == "desktop" ]]; then
    browser="firefox"
else
    browser="chromium"
fi

if [[ "$url" ]]; then
    i3-msg "exec \"$browser \\\"$url\\\""
else
    i3-msg "exec $browser"
fi
