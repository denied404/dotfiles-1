#!/bin/bash

URL=$(sed -r 's#^(git+ssh|ssh|git)://(\w+@)?##' <<< "$1")
shift

if pgrep -f "firefox" &>/dev/null; then
    UNIT="firefox"
else
    UNIT="google-chrome-beta"
fi

if [[ "$UNIT" == "firefox" ]]; then
    exec firefox --noerrdialogs --disable-infobars "$URL" "$@"
else
    exec "$UNIT" "$URL" "$@"
fi
