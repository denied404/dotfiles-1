#!/bin/bash

set -x
exec 2>&1 > /tmp/browser
browsers=("firefox-beta" "google-chrome-stable")

url=$(sed -r 's#^(git+ssh|ssh|git)://(\w+@)?##' <<< "$1")
params="${@:2}"

scheme=$(grep -Po '^\w+://' <<< "$url")
if [[ "$scheme" != "http://"
   && "$scheme" != "https://"
   && "$scheme" != "ftp://"
   && "$scheme" != "file://"
   && "$scheme" != "" ]]; then
    notify-send "URL" "$url"

    exit
fi

:open() {
    local browser="$1"

    systemd-cat -t "browser" <<< "${browser} ${url} ${params[@]}"

    if [[ "$browser" == "firefox-beta" ]]; then
        exec firefox-beta-bin "$url" ${params[@]}
    else
        exec "$browser" "$url" ${params[@]}
    fi
}

for browser in ${browsers[@]}; do
    if pgrep -f "$browser"; then
        :open "$browser"
        exit 0
    fi
done

:open "${browsers[1]}"
