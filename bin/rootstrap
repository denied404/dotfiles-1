#!/bin/bash

zfs-snapshot

:indent() {
    sed -r 's/^/    /'
}

:get-rootfs-files() {
    (
        cd $src_dir
        find ./ -type f -printf '%P\n'
    )
}

:log-header() {
    printf "$(highlight bold)Â» %s$(highlight reset)\n" "$*"
}

:process-file() {
    local filename="$1"

    if [[ $filename == *.git* ]]; then
        return 0
    fi

    if [[ $filename == *README.* ]]; then
        return 0
    fi

    local dst_file="${dst_dir}${filename}"
    local src_file="${src_dir}${filename}"

    copy=true
    if ! $force; then
        if test -f "$dst_file"; then
            local diff=$(diff -u "$dst_file" "$src_file")
            if [[ "$diff" ]]; then
                :log-header "DIFF $dst_file"
                :indent <<< "$diff"
                copy=false
            fi
        fi
    fi

    if $copy; then
        :log-header "COPY $dst_file"
        sudo mkdir -p "$(dirname "$dst_file")"
        sudo cp -rT "$src_file" "$dst_file"
    fi
}

:main() {
    local force=false
    if [[ "${1:-}" == "-f" || "${1:-}" == "--force" ]]; then
        force=true
    fi

    local src_dir
    local dst_dir

    src_dir=~/dotfiles/rootfs/
    dst_dir="/"

    :get-rootfs-files | while read filename; do
        :process-file "$filename";
    done
}

:main "${@}"
