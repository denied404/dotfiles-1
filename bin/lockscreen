#!/bin/bash

mcabber_cmd(){
    mcabber_fifo=~/.mcabber/fifo/office
    echo "$1" > $mcabber_fifo
}

mplayer_cmd(){
    mplayer_fifo=~/.mplayer/fifo
    if [ ! -z `pidof mplayer` ]; then
        echo "$1" > $mplayer_fifo
    fi
}

mcabber_cmd "/status away"
mplayer_cmd "pause"

slock

mcabber_cmd "/status online"
mplayer_cmd "pause"

reconfig-kbd
