#!/bin/bash

set -euo pipefail

:log() {
    printf "$(highlight bold)Â» zfs: %s$(highlight reset)\n" "$*"
}

:main() {
    sudo zfs list -t snapshot -H -o name \
        | grep backup_ \
        | while read snapshot; do
            :log "removing snapshot $snapshot"
            sudo zfs destroy -R -- "$snapshot"
        done

}

:main "${@}"
