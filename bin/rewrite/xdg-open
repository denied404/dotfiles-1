#!/bin/bash

[ -x /bin/systemd-cat-bash ] && /bin/systemd-cat-bash $(basename "$0")

set -x

link="$*"

if grep -qE "^magnet:" <<< "$link"; then
    notify-send " " "magnet: importing to .torrent"
    file=~/Downloads/magnet.$RANDOM.torrent
    magnet2torrent "$link" "$file"
    notify-send " " "magnet: success"
    exit 0
fi

exec browser "$link"
