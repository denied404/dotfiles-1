#!/bin/bash

which zfs >/dev/null
if [ $? -ne 0 ]; then
    exit 0
fi

set -e -u

echo "[zfs] creating snapshot"

pool="zroot"
slug="`date | sed 's/  / /g' | sed 's/ /_/g'`"
snapshot="$pool@$slug"

sudo zfs snapshot $snapshot

echo "[zfs] snapshot $snapshot has been created"

zfs-destroy-old-snapshots
