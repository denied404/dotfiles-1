#!/bin/bash


symlinks=($(cat ~/dotfiles/.symlinks))
clones=($(cat ~/dotfiles/.clones))

:ask() {
    echo -n ":: Press y to $1:"
    read result </dev/tty
    if [[ "$result" != "y" ]]; then
        return 1
    fi
}

for path in "${symlinks[@]}"; do
    echo "$path" >&2
    if [[ "$path" == "" ]]; then
        echo "Wow!"
    fi

    if [[ ! -L ~/"$path" ]]; then
        ls -lah ~/"$path"
        if ! :ask "remove ~/$path"; then
            echo "skipping"
            continue
        fi
        rm -rf ~/"$path"
        ln -s ~/dotfiles/"$path" ~/"$path"
    fi
done

