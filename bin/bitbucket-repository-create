#!/bin/bash

if [[ ! "$1" || "$1" = "-h" ]]; then
    echo "$0 <repository>"
    exit
fi

source ~/.config/bitbucket
data='{"name": "'"My Repo"'", "scmId":"git", "forkable":true}'
echo "$data" | jq .
curl -v \
    -u "$user:$password" \
    -X POST \
    -H "Accept: application/json"Â \
    -H "Content-Type: application/json; charset=UTF-8" \
    -d "$data" \
    "http://$host/rest/api/1.0/projects/DevOps/repos"
