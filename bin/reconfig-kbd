#!/bin/bash

export XAUTHORITY=~/.Xauthority
export DISPLAY=${DISPLAY:-:0.0}

xset r rate 110 100

setxkbmap \
    -keycodes \
        "evdev+aliases(qwerty)" \
    -symbols \
        "pc+us+ru:2+hjkl-ru+level3(lwin_switch)+mod4-lvl3+capslock(escape)+altwin(swap_alt_win)" \
    -compat \
        "complete+hjkl"
