#!/bin/bash

black1px_file=$(mktemp)
trap "rm $black1px_file" EXIT

black1px="iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNk+A8AAQUBAScY42YAAAAASUVORK5CYII="
base64 -d <<< "$black1px" > "$black1px_file"

feh --bg-fill ~/wallpapers/vertical-snow.jpg --bg-fill $black1px_file
exit
cd ~/wallpapers/

choose=$(/bin/ls *.* | grep bfv | sort -R | head -n1)

feh --bg-fill $choose
