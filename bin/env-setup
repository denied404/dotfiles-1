#!/bin/bash

exec 2>&1 >/dev/null

xrandr \
    --output DVI-I-1 --mode 1920x1080 --pos 0x0 --rotate left \
    --output VGA-1 --mode 1920x1080 --pos 1920x0 --rotate normal

reconfig-kbd

if [[ "$PROFILE" == "home" ]]; then
    if [ -z `pidof charge` ]; then
        sudo charge &
    fi
fi

killall -9 keynav
keynav &

if [ -z `pidof autousb` ]; then
    autousb &
fi

if [ -z `pidof redshift` ]; then
    redshift -l 55.7:12.6 -t 3500:3100 -g 0.8 -m randr -v &
fi

xset dpms 0 0 0
xset s off
xset -b
xset +fp ~/.fonts
xset fp rehash

xrdb -load ~/.Xresources
background $BACKGROUND
