#!/bin/bash

exec &> /tmp/env-setup.log

xrandr \
    --output DVI-I-1 --mode 1920x1080 --pos 0x0 --rotate normal \
    --output VGA-1 --mode 1920x1080 --pos 1920x0 --rotate normal

reconfig-kbd

if [ "$PROFILE" == "home" ]; then
    if [ ! pidof charge > /dev/null ]; then
        sudo charge &
    fi
fi

killall -9 keynav
keynav

if [ ! pidof autousb >/dev/null ]; then
    sudo autousb &
fi

if [ -f ~/.redshift ]; then
    if [ ! pidof redshift > /dev/null ]; then
        redshift -l 55.7:12.6 -t 3500:3100 -g 0.8 -m randr -v &
    fi
fi

xset dpms 0 0 0
xset s off
xset -b
xset +fp ~/.fonts
xset fp rehash

xrdb -load ~/.Xresources
background $BACKGROUND
