set realname="{{ .Mutt.Realname }}"

account-hook imap://{{ .Mutt.Address }}@{{ .Mutt.Server }}/ '\
    set \
    imap_pass={{ .Mutt.Password }}\
    from="{{ .Mutt.Address }}"\
    folder=imap://{{ .Mutt.Address }}@{{ .Mutt.Server }}/\
    record="+Sent"\
    postponed="+Drafts"'

set spoolfile='imap://{{ .Mutt.Address }}@{{ .Mutt.Server }}/'
